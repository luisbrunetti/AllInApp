<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">


    <View
        android:id="@+id/vFirstTwoLetters"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/view_rounded_notify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFirstTwoLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LB"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vFirstTwoLetters"
        app:layout_constraintEnd_toEndOf="@+id/vFirstTwoLetters"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/vFirstTwoLetters"
        app:layout_constraintTop_toTopOf="@+id/vFirstTwoLetters" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luis Bruno"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/vFirstTwoLetters"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vFirstTwoLetters"
        app:layout_constraintTop_toBottomOf="@+id/vFirstTwoLetters"
        app:layout_constraintVertical_bias="0.015" />

    <ImageButton
        android:id="@+id/ibDeleteUserSelected"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/bg_image_button_rounder"
        android:src="@drawable/ic_close_11dp"
        app:layout_constraintBottom_toBottomOf="@+id/vFirstTwoLetters"
        app:layout_constraintEnd_toEndOf="@+id/vFirstTwoLetters"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vFirstTwoLetters"
        app:layout_constraintTop_toTopOf="@+id/vFirstTwoLetters"
        app:layout_constraintVertical_bias="1.0"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>