<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vContactNewGroup"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vFirstTwoLetters"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/view_rounded_notify"
        app:layout_constraintBottom_toBottomOf="@+id/vContactNewGroup"
        app:layout_constraintStart_toStartOf="@+id/vContactNewGroup"
        app:layout_constraintTop_toTopOf="@+id/vContactNewGroup" />

    <TextView
        android:id="@+id/rvNameNewGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="12dp"
        android:text="Luis Bruno"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/vContactNewGroup"
        app:layout_constraintEnd_toEndOf="@+id/vContactNewGroup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/vFirstTwoLetters"
        app:layout_constraintTop_toTopOf="@+id/vContactNewGroup" />

    <TextView
        android:id="@+id/rvFirstTwoLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LB"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vFirstTwoLetters"
        app:layout_constraintEnd_toEndOf="@+id/vFirstTwoLetters"
        app:layout_constraintStart_toStartOf="@+id/vFirstTwoLetters"
        app:layout_constraintTop_toTopOf="@+id/vFirstTwoLetters" />

</androidx.constraintlayout.widget.ConstraintLayout>